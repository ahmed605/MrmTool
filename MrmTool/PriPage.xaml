<Page
    x:Class="MrmTool.PriPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MrmTool"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MrmTool.Models"
    xmlns:wct="using:CommunityToolkit.WinUI.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:mbehaviors="using:MrmTool.Behaviors"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:selectors="using:MrmTool.Selectors"
    xmlns:winuieditor="using:WinUIEditor"
    xmlns:selectorsContract5Present="using:MrmTool.Selectors?IsApiContractPresent(Windows.Foundation.UniversalApiContract,5)"
    xmlns:selectorsContract5NotPresent="using:MrmTool.Selectors?IsApiContractNotPresent(Windows.Foundation.UniversalApiContract,5)"
    xmlns:contract7Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,7)"
    xmlns:contract5Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,5)"
    xmlns:contract5NotPresent="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractNotPresent(Windows.Foundation.UniversalApiContract,5)"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Page.Resources>
        <contract5NotPresent:DataTemplate x:Key="ResourceTemplateOld" x:DataType="models:ResourceItem">
            <muxc:TreeViewItemWrapper AutomationProperties.Name="{x:Bind DisplayName, Mode = OneWay}"
                          ItemsSource="{x:Bind Children}" Margin="0,2,0,2" Background="Transparent">
                <StackPanel Orientation="Horizontal">
                    <Image Width="28" Source="{x:Bind Icon, Mode = OneWay}" Margin="0,0,10,0"/>
                    <TextBlock Text="{x:Bind DisplayName, Mode = OneWay}" VerticalAlignment="Center" />
                </StackPanel>
                <muxc:TreeViewItemWrapper.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Add Resource" Visibility="{x:Bind IsFolder}" Click="AddResource_Click">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Add"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSubItem Text="Rename">
                            <MenuFlyoutSubItem.Icon>
                                <SymbolIcon Symbol="Rename"/>
                            </MenuFlyoutSubItem.Icon>
                            <MenuFlyoutItem Text="Simple Rename" Click="SimpleRename_Click"/>
                            <MenuFlyoutItem Text="Full Rename" Click="FullRename_Click"/>
                        </MenuFlyoutSubItem>
                        <MenuFlyoutItem Text="Delete" Click="RemoveResources_Click">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Delete"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </muxc:TreeViewItemWrapper.ContextFlyout>
            </muxc:TreeViewItemWrapper>
        </contract5NotPresent:DataTemplate>

        <contract5Present:DataTemplate x:Key="ResourceTemplate" x:DataType="models:ResourceItem">
            <muxc:TreeViewItem AutomationProperties.Name="{x:Bind DisplayName, Mode = OneWay}"
                        ItemsSource="{x:Bind Children}" Margin="0,2,0,2" Background="Transparent">
                <StackPanel Orientation="Horizontal">
                    <Image Width="28" Source="{x:Bind Icon, Mode = OneWay}" Margin="0,0,10,0"/>
                    <TextBlock Text="{x:Bind DisplayName, Mode = OneWay}" VerticalAlignment="Center" />
                </StackPanel>
                <muxc:TreeViewItem.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Add Resource" Visibility="{x:Bind IsFolder}" Click="AddResource_Click">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Add"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSubItem Text="Rename">
                            <MenuFlyoutSubItem.Icon>
                                <SymbolIcon Symbol="Rename"/>
                            </MenuFlyoutSubItem.Icon>
                            <MenuFlyoutItem Text="Simple Rename" Click="SimpleRename_Click"/>
                            <MenuFlyoutItem Text="Full Rename" Click="FullRename_Click"/>
                        </MenuFlyoutSubItem>
                        <MenuFlyoutItem Text="Delete" Click="RemoveResources_Click">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Delete"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </muxc:TreeViewItem.ContextFlyout>
            </muxc:TreeViewItem>
        </contract5Present:DataTemplate>

        <selectors:ResourceItemTemplateSelector x:Key="ResourceItemTemplateSelector"
            selectorsContract5Present:Resource="{StaticResource ResourceTemplate}"
            selectorsContract5NotPresent:Resource="{StaticResource ResourceTemplateOld}"/>
    </Page.Resources>

    <Grid Background="Transparent" AllowDrop="True" DragOver="Grid_DragOver" Drop="Grid_Drop">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <muxc:MenuBar Grid.Row="0">
            <muxc:MenuBarItem Title="File">
                <MenuFlyoutItem Text="Open" Click="Open_Click">
                    <MenuFlyoutItem.Icon>
                        <SymbolIcon Symbol="OpenFile"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Save" Click="Save_Click">
                    <MenuFlyoutItem.Icon>
                        <SymbolIcon Symbol="Save"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Save As" Click="SaveAs_Click">
                    <MenuFlyoutItem.Icon>
                        <SymbolIcon Symbol="SaveLocal"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Exit" Click="Exit_Click">
                    <MenuFlyoutItem.Icon>
                        <SymbolIcon Symbol="Cancel"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </muxc:MenuBarItem>
            <muxc:MenuBarItem Title="Edit">
                <MenuFlyoutItem Text="Add Resource" Click="AddResource_Click">
                    <MenuFlyoutItem.Icon>
                        <SymbolIcon Symbol="Add"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem x:Name="RemoveResourcesItem" Text="Remove Selected Resource(s)" IsEnabled="False" Click="RemoveResources_Click">
                    <MenuFlyoutItem.Icon>
                        <SymbolIcon Symbol="Delete"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Set Root Folder" Click="SetRootFolder_Click">
                    <MenuFlyoutItem.Icon>
                        <SymbolIcon Symbol="OpenLocal"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Embed Path Resources In" Click="EmbedPathResources_Click">
                    <MenuFlyoutItem.Icon>
                        <SymbolIcon Symbol="ImportAll"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </muxc:MenuBarItem>
            <muxc:MenuBarItem Title="View">
                <MenuFlyoutSubItem Text="Previewer theme">
                    <muxc:RadioMenuFlyoutItem Text="System" GroupName="PreviewerTheme" Click="SystemTheme_Click" IsChecked="True" />
                    <muxc:RadioMenuFlyoutItem Text="Light" GroupName="PreviewerTheme" Click="LightTheme_Click" />
                    <muxc:RadioMenuFlyoutItem Text="Dark" GroupName="PreviewerTheme" Click="DarkTheme_Click" />
                    <MenuFlyoutSubItem.Icon>
                        <FontIcon Glyph="&#xF08C;" />
                    </MenuFlyoutSubItem.Icon>
                </MenuFlyoutSubItem>
            </muxc:MenuBarItem>
            <muxc:MenuBarItem Title="Help">
                <MenuFlyoutItem Text="Third Party Notices" Click="Notice_Click">
                    <MenuFlyoutItem.Icon>
                        <SymbolIcon Symbol="ContactInfo"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </muxc:MenuBarItem>
        </muxc:MenuBar>

        <Grid Grid.Row="1" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="280"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <muxc:TreeView x:Name="treeView" Grid.Column="0" CanDragItems="False" CanReorderItems="False" ItemsSource="{x:Bind ResourceItems}" ItemTemplateSelector="{StaticResource ResourceItemTemplateSelector}" SelectionChanged="treeView_SelectionChanged"/>

            <Grid Grid.Column="2" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="180" MinHeight="130"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*" MinHeight="130"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Margin="16,0,10.5,10.5" BorderThickness="0.5" CornerRadius="8">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="{ThemeResource TextFillColorSecondary}" Opacity="0.4"/>
                    </Border.BorderBrush>
                    <Grid>
                        <ListView x:Name="candidatesList" SelectionChanged="candidatesList_SelectionChanged">
                            <ListView.Header>
                                <Border Background="{ThemeResource SolidBackgroundFillColorTertiaryBrush}">
                                    <interactivity:Interaction.Behaviors>
                                        <behaviors:StickyHeaderBehavior/>
                                    </interactivity:Interaction.Behaviors>

                                    <wct:DataTable Margin="10,0,0,0" Height="30">
                                        <wct:DataColumn Content="Type" Width="120" MinWidth="100" CanResize="True"/>
                                        <wct:DataColumn Content="Qualifiers"/>
                                    </wct:DataTable>
                                </Border>
                            </ListView.Header>

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:CandidateItem">
                                    <Grid Background="Transparent">
                                        <wct:DataRow HorizontalAlignment="Left">
                                            <TextBlock Text="{x:Bind Type, Mode = OneWay}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{x:Bind Qualifiers, Mode = OneWay}" VerticalAlignment="Center"/>
                                        </wct:DataRow>

                                        <Grid.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Export" Visibility="{x:Bind IsExportable, Mode = OneWay}" Click="ExportButton_Click">
                                                    <MenuFlyoutItem.Icon>
                                                        <SymbolIcon Symbol="Save"/>
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Try Show in Explorer" Visibility="{x:Bind IsPathCandidate, Mode = OneWay}" Click="OpenFolder_Click">
                                                    <MenuFlyoutItem.Icon>
                                                        <SymbolIcon Symbol="Folder"/>
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Try Embed into PRI" Visibility="{x:Bind IsPathCandidate, Mode = OneWay}" Click="EmbedPathCandidate_Click">
                                                    <MenuFlyoutItem.Icon>
                                                        <SymbolIcon Symbol="Import"/>
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Modify" Click="CreateOrModifyCandidate_Click">
                                                    <MenuFlyoutItem.Icon>
                                                        <SymbolIcon Symbol="Edit"/>
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Delete" Click="DeleteCandiate_Click">
                                                    <MenuFlyoutItem.Icon>
                                                        <SymbolIcon Symbol="Delete"/>
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Grid.ContextFlyout>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <Viewbox ToolTipService.ToolTip="Add Candidate" Width="28" Height="28" Margin="0,2,2,0" VerticalAlignment="Top" HorizontalAlignment="Right" Tapped="CreateOrModifyCandidate_Click">
                            <Grid Padding="5" Background="Transparent">
                                <SymbolIcon x:Name="addSymbol" Symbol="Add"/>
                            </Grid>

                            <Viewbox.Resources>
                                <SineEase x:Name="easingFunction" EasingMode="EaseIn"/>

                                <Storyboard x:Name="HoverBoard">
                                    <ColorAnimation Duration="0:0:0.2" From="{ThemeResource SystemBaseHighColor}" To="IndianRed"
                                        Storyboard.TargetProperty="(UIElement.Foreground).(SolidColorBrush.Color)"
                                        Storyboard.TargetName="addSymbol" EasingFunction="{StaticResource easingFunction}"
                                        d:IsOptimized="True"/>
                                </Storyboard>

                                <Storyboard x:Name="UnhoverBoard">
                                    <ColorAnimation Duration="0:0:0.2" From="IndianRed" To="{ThemeResource SystemBaseHighColor}"
                                        Storyboard.TargetProperty="(UIElement.Foreground).(SolidColorBrush.Color)"
                                        Storyboard.TargetName="addSymbol" EasingFunction="{StaticResource easingFunction}"
                                        d:IsOptimized="True"/>
                                </Storyboard>
                            </Viewbox.Resources>

                            <interactivity:Interaction.Behaviors>
                                <mbehaviors:PointerEnteredBehavior>
                                    <interactivity:ControlStoryboardAction Storyboard="{StaticResource UnhoverBoard}" ControlStoryboardOption="Stop"/>
                                    <interactivity:ControlStoryboardAction Storyboard="{StaticResource HoverBoard}" ControlStoryboardOption="Play"/>
                                </mbehaviors:PointerEnteredBehavior>

                                <mbehaviors:PointerExitedBehavior>
                                    <interactivity:ControlStoryboardAction Storyboard="{StaticResource HoverBoard}" ControlStoryboardOption="Stop"/>
                                    <interactivity:ControlStoryboardAction Storyboard="{StaticResource UnhoverBoard}" ControlStoryboardOption="Play"/>
                                </mbehaviors:PointerExitedBehavior>
                            </interactivity:Interaction.Behaviors>
                        </Viewbox>
                    </Grid>
                </Border>

                <Border x:Name="PreviewContainer" Grid.Row="2" Margin="16,0,10.5,10.5" BorderThickness="0.5" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" CornerRadius="8">
                    <contract7Present:Border.BackgroundTransition>
                        <contract7Present:BrushTransition/>
                    </contract7Present:Border.BackgroundTransition>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="{ThemeResource TextFillColorSecondary}" Opacity="0.4"/>
                    </Border.BorderBrush>
                    <Grid>
                        <!-- String values -->
                        <winuieditor:CodeEditorControl Padding="-10,12,0,0" x:Name="valueTextEditor" SyntaxHighlightingApplied="SyntaxHighlightingApplied" x:Load="False" />
                        
                        <!-- Path error: Invalid root -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" x:Load="False" x:Name="invalidRootPathContainer">
                            <TextBlock TextWrapping="Wrap" Text="The root path doesn't contain the the file. You can specify another one below." HorizontalAlignment="Center" />
                            <Button Content="Set root folder" HorizontalAlignment="Center" Margin="0,10,0,0" Click="SetRootFolder_Click" />
                        </StackPanel>

                        <!-- Path error: Failed to open file -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20" x:Load="False" Visibility="Collapsed" x:Name="failedToOpenFileContainer">
                            <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" >
                                Failed to open <Bold>&quot;<Run x:Name="failedFileNameRun"/>&quot;</Bold>, please make sure the file is valid, accessible, and is not open in any other app.
                                <LineBreak/>
                                <LineBreak/>
                                <Bold>Exception:</Bold> <Run x:Name="failedExceptionMessageRun"/>
                            </TextBlock>
                            <Button Content="Try again" HorizontalAlignment="Center" Margin="0,20,0,0" Click="TryAgain_Click" />
                        </StackPanel>

                        <!-- Path fallback -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" x:Load="False" x:Name="openFolderContainer">
                            <Button Content="Show in Explorer" HorizontalAlignment="Center" Click="OpenFolder_Click" />
                        </StackPanel>

                        <!-- Embedded data fallback -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" x:Load="False" x:Name="exportContainer">
                            <TextBlock x:Name="fileSizeLabel" HorizontalAlignment="Center" />
                            <Button Content="Export to disk" HorizontalAlignment="Center" Margin="0,10,0,0" Click="ExportButton_Click" />
                        </StackPanel>

                        <!-- XBF fallback -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20" x:Load="False" Visibility="Collapsed" x:Name="xbfFallbackContainer">
                            <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" >
                                Failed to decompile <Bold>&quot;<Run x:Name="xbfFileNameRun"/>&quot;</Bold>.
                                <LineBreak/>
                                <LineBreak/>
                                <Bold>Exception:</Bold> <Run x:Name="failedXbfExceptionMessageRun"/>
                            </TextBlock>
                            <Button Content="Export to disk" HorizontalAlignment="Center" Margin="0,20,0,0" Click="ExportButton_Click" />
                        </StackPanel>

                        <!-- Image Previewer -->
                        <ScrollViewer x:Name="imagePreviewerContainer" x:Load="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalScrollBarVisibility="Visible" HorizontalScrollMode="Auto" VerticalScrollMode="Auto" ZoomMode="Enabled" IsZoomInertiaEnabled="True">
                            <Image x:Name="imagePreviewer" Stretch="None" />
                        </ScrollViewer>
                        
                        <!-- SVG Previewer -->
                        <ScrollViewer x:Name="svgPreviewerContainer" x:Load="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalScrollBarVisibility="Visible" HorizontalScrollMode="Auto" VerticalScrollMode="Auto" ZoomMode="Enabled" IsZoomInertiaEnabled="True">
                            <ContentPresenter x:Name="svgPreviewer" />
                        </ScrollViewer>
                    </Grid>
                </Border>

                <wct:GridSplitter Grid.Row="1" Height="12" ResizeBehavior="BasedOnAlignment" ResizeDirection="Rows" Background="Transparent">
                    <wct:GridSplitter.Element>
                        <TextBlock Text="&#xE76F;" FontFamily="Segoe MDL2 Assets" IsHitTestVisible="False" Opacity="0.5" VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </wct:GridSplitter.Element>
                    <wct:GridSplitter.RenderTransform>
                        <TranslateTransform Y="-5" />
                    </wct:GridSplitter.RenderTransform>
                </wct:GridSplitter>
            </Grid>

            <wct:GridSplitter Grid.Column="1" Width="16" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto" Background="Transparent">
                <wct:GridSplitter.Element>
                    <Rectangle Fill="{ThemeResource ButtonForegroundThemeBrush}" Width="0.5" Opacity="0.1" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                </wct:GridSplitter.Element>
                <wct:GridSplitter.RenderTransform>
                    <TranslateTransform X="8" />
                </wct:GridSplitter.RenderTransform>
            </wct:GridSplitter>
        </Grid>
    </Grid>
</Page>
