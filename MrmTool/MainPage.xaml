<Page
    x:Class="MrmTool.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MrmTool"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="MainGrid" AllowDrop="True" DragOver="MainGrid_DragOver" Drop="MainGrid_Drop" Background="Transparent">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="MrmTool" FontWeight="SemiLight" FontSize="42" />
            <Button Content="Open PRI File" HorizontalAlignment="Center" Margin="0,15,0,0" Click="OnOpenFileClicked" />
        </StackPanel>
    </Grid>
</Page>
